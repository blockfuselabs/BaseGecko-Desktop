# Vite Environment Configuration

# API Configuration
VITE_API_BASE_URL=https://coinhawk-api.blockfuselabs.com/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Backend Configuration
VITE_PORT=5000
VITE_BASEAPP_REFERRER_ADDRESS=your_referrer_address_here
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
VITE_APP_NAME=CoinHawk
VITE_APP_VERSION=1.0.0
VITE_DEFAULT_CURRENCY=USD

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_NOTIFICATIONS=true

# Third-party Services
VITE_COINGECKO_API_KEY=your_coingecko_api_key_here
VITE_MORALIS_API_KEY=your_moralis_api_key_here


# Blockchain Configuration
VITE_DEFAULT_CHAIN_ID=8453
VITE_CHAIN_NAME=Base
VITE_CHAIN_RPC_URL=https://mainnet.base.org

# UI Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_SWITCHING=true
VITE_DEFAULT_LANGUAGE=en

# Performance
VITE_ENABLE_SW=true
VITE_CACHE_DURATION=300000